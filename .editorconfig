# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file, plus tabs
# tabs are because of: https://twitter.com/Rich_Harris/status/1541761871585464323
[*]
end_of_line = lf
indent_style = tab
insert_final_newline = true

[*.yaml]
end_of_line = lf
indent_style = space
insert_final_newline = true
